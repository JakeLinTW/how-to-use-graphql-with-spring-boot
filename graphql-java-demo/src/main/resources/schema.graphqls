type Query {
    allBooks: [Book]
    countBooks: Long
    allAuthors: [Author]
    countAuthors: Long
    book(id: ID!): Book
    author(id: ID!): Author
}

"""
書籍
"""
type Book {
    id: ID!
    name: String
    authorId: ID!
    "作者"
    author: Author
}

"""
作者
"""
type Author {
    id: ID!
    name: String
}

type Mutation {
    addAuthor(name: String!): Author
    deleteAuthor(id: ID!): Boolean
    addBook(name: String!, authorId: Int!): Book
    deleteBook(id: ID!): Boolean
}
